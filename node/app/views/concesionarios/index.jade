extends ../layouts/default

block main
  h1= title

block content

  h3 Concesionarias
  hr

  - if (concesionarios.length)
    - each concesionario in concesionarios
      include list

    - if (pages > 1)
      ul.pagination
        != createPagination(pages, page)
  - else
    h4.muted No hay concesionarios.&nbsp;

      - if (puedeABM)
        a(href="/concesionarios/nuevo") Crear concesionario
